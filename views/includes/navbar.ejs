<style>
  .nav-add{
    height: 50px;
    width: 160px;
  }
  .nav-ad{
    width: 100px;
  }
</style>
<nav class="navbar navbar-expand-md navbar-light bg-body-tertiary sticky-top border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><i class="fa-brands logo fa-airbnb"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a style="font-size: 1.2rem;" class="nav-link " aria-current="page" href="/listings">Explore</a>
       
        
      </div>
      <nav class="ms-auto navbar navbar-light bg-light w-100">
        <div class="container-fluid searchbar w-100">
          <!-- name="q" so server receives the search term; preserve current value via q -->
          <form class="d-flex w-100" method="get" action="/listings/search">
            <input name="q" class="form-control search-pal me-2 flex-grow-1" type="search" placeholder="Search by category or location" aria-label="Search" value="<%= typeof q !== 'undefined' ? q : '' %>">
            <button class="btn search-btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </nav>
      <div class="navbar-nav ms-auto">
        <a class="nav-link nav-add" href="/listings/new">Add a new listing</a>
       <% /* Defensive check: ensure currentUser exists before accessing properties */ %>
       <% if (!currentUser) { %>
        <a class="nav-link " aria-current="page" href="/login"><B>Login</B></a>
        <a class="nav-link" href="/signup"><b>Signup</b></a>
       <% } else { %>
        <!-- Safe display of username; fallback to 'Account' if username missing -->
        <a class="nav-link nav-ad" >Hello, <%= currentUser.username ? currentUser.username : 'Account' %></a>
        <a class="nav-link" href="/logout">Logout</a>
       <% } %>
      </div>
    </div>
  </div>
  
